<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:id="@+id/login_uer_Edt"
            android:layout_marginRight="70dp"
            android:shadowColor="#4E4E4E"
            android:shadowDx="3"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textSize="17sp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:textColorHint="#000000"
            android:textColor="#FF5722"
            android:hint="   User name"
            android:background="@drawable/circle_bg"
            android:drawableLeft="@drawable/round_perm_identity_black_18dp"
            android:textAlignment="center"
            android:gravity="center_horizontal">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:id="@+id/login_pass_Edt"
            android:layout_marginRight="70dp"
            android:hint="   Password"
            android:textColorHint="#000000"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textColor="#FF5722"
            android:layout_below="@id/login_uer_Edt"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/round_https_black_18dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:shadowColor="#4E4E4E"
            android:shadowDx="3"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:background="@drawable/circle_bg">
        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/loginBtn"
            android:shadowColor="#4E4E4E"
            android:shadowDx="3"
            android:layout_centerHorizontal="true"
            android:onClick="login"
            android:layout_below="@id/login_pass_Edt"
            android:background="@drawable/login_btn"
            android:layout_marginTop="25dp">
        </Button>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/registerTxt"
            android:layout_below="@id/loginBtn"
            android:layout_marginTop="20dp"
            android:textColor="#FF5722"
            android:text="New User ? Register here !"
            android:onClick="newUser"
            android:textSize="17sp">
        </TextView>
	 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerTxt"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:text="CONTACT : 8828620498"
            android:textColor="#3F51B5">
        </TextView>
    </RelativeLayout>
</LinearLayout>