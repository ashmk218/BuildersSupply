<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/shipping_bg"
    android:layout_height="match_parent"
    tools:context=".AddActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD PRODUCTS"
        android:id="@+id/txtvw"
        android:layout_marginTop="26dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#FF5722"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/txtvw"
        android:background="@drawable/circle_bg"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textSize="27sp"
        android:hint="Product name"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/prd_nm"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_bg"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textSize="27sp"
        android:inputType="number"
        android:hint="Price"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/prd_prc"
        android:layout_below="@id/prd_nm"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle_bg"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textSize="27sp"
        android:hint="Description 1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/desc1"
        android:layout_below="@id/prd_prc"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_bg"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textSize="27sp"
        android:hint="Description 2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/desc2"
        android:layout_below="@id/desc1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_bg"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textSize="27sp"
        android:hint="Description 3"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/desc3"
        android:layout_below="@id/desc2"
        />
    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginTop="25dp"
        android:prompt="@string/cat_prompt"
        android:entries="@array/category_list"
        android:background="@drawable/circle_bg"
        android:textAlignment="center"
        android:layout_below="@id/desc3"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center_horizontal">
    </androidx.appcompat.widget.AppCompatSpinner>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_prct"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_bg"
        android:text="ADD ITEM"
        android:textColor="#FFFFFF"
        android:onClick="addItem"
        android:padding="10dp"
        android:textSize="20dp"/>
</RelativeLayout>