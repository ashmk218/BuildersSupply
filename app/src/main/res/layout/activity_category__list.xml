<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category_List">

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:onClick="logoutAction"
        android:layout_margin="16dp"
        android:src="@drawable/logout" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORIES"
        android:id="@+id/cat_txt"
        android:layout_marginTop="26dp"
        android:textSize="30dp"
        android:layout_toRightOf="@id/fab"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textColor="#FF5722"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fab"
        android:scrollbars="vertical"
        android:id="@+id/scrlbars">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="catRedirect"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif"
                android:tag="1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/cement_btn"
                android:textSize="35sp"
                android:text="CONSTRUCTIONS"
                android:background="@drawable/cat_bg">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="catRedirect"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:tag="2"
                android:id="@+id/paint_btn"
                android:layout_below="@id/cement_btn"
                android:textSize="55sp"
                android:text="PAINTS"
                android:background="@drawable/cat_bg">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="catRedirect"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:tag="3"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/decor_btn"
                android:layout_below="@id/paint_btn"
                android:textSize="45sp"
                android:text="FURNITURE"
                android:background="@drawable/cat_bg">
            </Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="4"
                android:onClick="catRedirect"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/piping_btn"
                android:layout_below="@id/decor_btn"
                android:textSize="25sp"
                android:text="ELECTRICIAN/PLUMBERS"
                android:background="@drawable/cat_bg">
            </Button>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>